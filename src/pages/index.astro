    <!-- CallToAction Widget *********** -->

    <CallToAction
        title="Let's create together"
        subtitle="Ready to transform your vision into captivating designs?"
        actions={[
            {
                variant: 'primary',
                text: 'Hire me',
                href: getPermalink('/contact#form'),
            },
        ]}
    />

    <!-- BlogLatestPost Widget **************** -->

    <BlogLatestPosts
        id="blog"
        title="Explore my blog for some honest insights."
        information={`I write about things I’m learning, building, or just thinking through. It’s a mix of code, design, and the occasional deep dive. Nothing fancy, just jotting down bits that interest me.`}
    >
        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
