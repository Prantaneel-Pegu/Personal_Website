---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getBlogPermalink, getPermalink } from '~/utils/permalinks';
import MyPhoto from '~/assets/images/my-photo-long.jpg';
import StepsEmployment from '~/components/widgets/StepsEmployment.astro';
import FeaturesSkills from '~/components/widgets/FeaturesSkills.astro';
import ProjectImage1 from '~/assets/images/snackhub-showcase.png';
import ProjectImage2 from '~/assets/images/nsg-showcase.png';

const metadata = {
    title: 'Prantaneel Pegu',
};
---

<Layout metadata={metadata}>
    <Fragment slot="announcement"></Fragment>
    <Fragment slot="header">
        <Header
            links={[
                { text: 'Home', href: '#' },
                { text: 'About', href: '#about' },
                { text: 'Resume', href: '#resume' },
                { text: 'Projects', href: '#portfolio' },
                { text: 'Blog', href: getBlogPermalink() },
            ]}
            actions={[
                {
                    text: 'Contact me',
                    href: 'contact',
                },
            ]}
            isSticky
            showRssFeed
            showToggleTheme
        />
    </Fragment>

    <!-- Hero2 Widget ******************* -->

    <Hero
        id="hero"
        title="Prantaneel Pegu"
        tagline="Hi! I am"
        actions={[{ variant: 'primary', text: "Let's talk", href: getPermalink('/contact#form') }]}
    >
        <Fragment slot="subtitle">
            I'm a full-stack web developer with a strong focus on intuitive and user-friendly design. I have built fast,
            accessible, and scalable web applications for multiple businesses and have experience working with a wide
            variety of tools.
        </Fragment>
    </Hero>

    <!-- Content Widget **************** -->

    <Content
        id="about"
        columns={3}
        items={[
            {
                icon: 'tabler:brand-linkedin',
                callToAction: {
                    target: '_blank',
                    text: 'LinkedIn',
                    href: 'https://www.linkedin.com/in/prantaneel-pegu/',
                },
            },
            {
                icon: 'tabler:brand-x',
                callToAction: {
                    target: '_blank',
                    text: 'X.com',
                    href: 'https://x.com/PrantaneelPegu',
                },
            },
            {
                icon: 'tabler:brand-github',
                callToAction: {
                    target: '_blank',
                    text: 'Github',
                    href: 'https://github.com/Prantaneel-Pegu',
                },
            },
        ]}
        image={{
            src: MyPhoto,
            alt: 'A photo of me',
            loading: 'eager',
        }}
    >
        <Fragment slot="content">
            <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
            <p>
                Hi! I'm a developer who loves turning ideas into functional and pleasing digital experiences. I enjoy
                designing beautiful websites just as much as I appreciate visiting them.
            </p>
            <br />
            <p>
                While I specialize in web development, I am genuinely passionate about computer science as a whole. What
                fascinates me is its endless depth and diversity — I just love how beautifully complex it is.
            </p>
            <br />
            <p>If you're curious to learn more about me, you can follow me here:</p>
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Steps Widget ****************** -->

    <StepsEmployment
        id="resume"
        title="Work experience"
        items={[
            {
                title: {
                    role: 'Lead Developer',
                    company: 'Mising Autonomous Council',
                    duration: 'Dec 2024 - Present',
                },
                description: `Currently developing the official website for the Mising Autonomous Council (MAC), a local government body focused on the welfare and development of the Mising tribal community. Designed and built the site independently, focusing on performance, accessibility, and user-friendliness. `,
                icon: 'tabler:briefcase',
            },
            {
                title: {
                    role: 'Contract Developer',
                    company: 'Siyang Sisang',
                    duration: 'Jul 2024 - Dec 2024',
                },
                callToAction: {
                    target: '_blank',
                    text: 'Visit the website',
                    icon: 'tabler:chevron-right',
                    href: 'https://siyangsisang.com',
                },
                description: `At Siyang Sisang, an organization dedicated to preserving and promoting local culture and music, I led the end-to-end development of their official website to improve their digital outreach and boost event promotion.`,
                icon: 'tabler:briefcase',
            },
            {
                title: {
                    role: 'Contract Developer',
                    company: 'Donyi Destinations',
                    duration: 'Jan 2024 - Jul 2024',
                },
                callToAction: {
                    target: '_blank',
                    text: 'Visit the website',
                    icon: 'tabler:chevron-right',
                    href: 'https://www.donyi-destinations.in',
                },
                description: `Developed the official website for Donyi Destinations, an eco-travel agency dedicated to sustainable tourism in Northeast India.`,
                icon: 'tabler:briefcase',
            },
        ]}
        classes={{ container: 'max-w-3xl' }}
    />

