    <!-- CallToAction Widget *********** -->

    <CallToAction
        title="Let's create together"
        subtitle="Ready to transform your vision into captivating designs?"
        actions={[
            {
                variant: 'primary',
                text: 'Hire me',
                href: getPermalink('/contact#form'),
            },
        ]}
    />

    <!-- BlogLatestPost Widget **************** -->

    <BlogLatestPosts
        id="blog"
        title="Explore my blog for some honest insights."
        information={`I write about things I’m learning, building, or just thinking through. It’s a mix of code, design, and some occasional philosphy. I keep it simple and share whatever I think is worth noting.`}
    >
        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
